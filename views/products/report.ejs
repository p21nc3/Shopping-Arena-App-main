    &nbsp;&nbsp;<h2>Inventory Availability Table</h2>
    <div class="row products">

 

        <table class="table">
          <thead>
            <tr>
              
              <th scope="col">Product</th>
              <th scope="col">Cost</th>
              <th scope="col">Quantity</th>
              <th scope="col">Availability Status</th>
              <th scope="col">Inventory Investment (In Rs)</th>
           
            </tr>
          </thead>
          <tbody>
            <% if(products.length){
           
            for(var i = 0; i< products.length; i++) {%>  
            <tr>
            
              <td><%= products[i].name%></td>
              <td ><%= products[i].price%></td>
              <td ><%= products[i].qty%></td>


              <% if(products[i].qty==0){%> 
              <td><button class="button2" type="button" value="Unavailable" onclick="edit_redirect(`<%= products[i]._id %>`)"> <a href="/products/<%= products[i]._id %>"> Unavailable</a> </button></td>
              <%}%>

              <% if(products[i].qty!=0){%> 
              <td><button class="button" type="button" value="Available" onclick="edit_redirect(`<%= products[i]._id %>`)"> <a href="/products/<%= products[i]._id %>"> Available</a></button></td>
              <%}%>
              
              <td ><%= products[i].price * products[i].qty %></td></tr>
            <% }

              
            
                     
             }
             
             
             
             
             
             else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
              <% } %>    
            
          </tbody>
          </table>
     
    </div>




</div>
